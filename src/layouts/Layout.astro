---
import ThemeScript from '../components/ThemeScript.astro';
import Navigation from '../components/Navigation.astro';
import '../styles/global.scss';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'エウレカの本棚', 
  description = 'ライトノベル書評サイト' 
} = Astro.props;

const fullTitle = title === 'エウレカの本棚' ? title : `${title} | エウレカの本棚`;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		
		<!-- Google Fonts: Noto Serif Japanese -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link 
			href="https://fonts.googleapis.com/css2?family=Noto+Serif+JP:wght@400;500;600;700&display=swap" 
			rel="stylesheet" 
		/>
		
		<title>{fullTitle}</title>
		<ThemeScript />
	</head>
	<body>
		<Navigation />
		<main>
			<slot />
		</main>
		<footer class="site-footer">
			<div class="container">
				<p>&copy; 2024 エウレカの本棚. All rights reserved.</p>
			</div>
		</footer>
	</body>
</html>

<style lang="scss">
	@import '../styles/variables.scss';

	main {
		min-height: calc(100vh - 200px);
		padding: $spacing-2xl 0;
	}

	.site-footer {
		background-color: var(--color-primary);
		color: var(--color-secondary);
		padding: $spacing-xl 0;
		margin-top: $spacing-2xl;
		text-align: center;
		border-top: 2px solid var(--color-accent);

		p {
			margin: 0;
			font-size: $font-size-sm;
		}
	}
</style>
